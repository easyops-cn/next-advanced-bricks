{
  "$schema": "http://json.schemastore.org/renovate",
  "extends": ["config:base"],
  "prHourlyLimit": 2,
  "rangeStrategy": "bump",
  "semanticCommits": "enabled",
  "commitMessagePrefix": "chore(deps):",
  "ignorePresets": [":ignoreModulesAndTests"],
  "packageRules": [
    {
      "matchPackagePatterns": [
        "^@next-core/"
      ],
      "excludePackageNames": [
        "@next-core/brick-dll-v3",
        "@next-core/styles-v3",
        "@next-core/brick-icons",
        "@next-core/illustrations"
      ],
      "groupName": "next-core packages",
      "assignees": ["weareoutman"]
    },
    {
      "matchPackageNames": [
        "@next-core/brick-dll-v3",
        "@next-core/styles-v3",
        "@next-core/brick-icons",
        "@next-core/illustrations"
      ],
      "matchPackagePatterns": ["^@next-dll/"],
      "enabled": true,
      "groupName": "legacy v2 packages",
      "assignees": ["weareoutman"]
    },
    {
      "matchPackageNames": ["history", "js-yaml", "node", "react", "react-dom"],
      "matchPackagePatterns": ["^@types/"],
      "matchUpdateTypes": ["major"],
      "enabled": false
    },
    {
      "depTypeList": ["engines"],
      "enabled": false
    },
    {
      "groupName": "type packages",
      "matchPackagePatterns": ["^@types/"],
      "assignees": ["weareoutman"]
    }
  ],
  "postUpdateOptions": ["yarnDedupeHighest"]
}
